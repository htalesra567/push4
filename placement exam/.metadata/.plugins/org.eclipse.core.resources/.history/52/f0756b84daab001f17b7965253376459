package com.cdac.placement;

public class AppearOne {

		public static int uniqueNo(int arr[]) {
			int count =0;
			int maxCount =0;
			for(int i=0;i<arr.length;i++) {
				if(arr[i] == 1) {
					count++;
				}
				else {
					if(maxCount<count) {
						maxCount=count;
					}
				}
			}
			
			if(maxCount<count) {
				maxCount=count;
			}
			return maxCount;
		}
		
		public static void main(String args[]) {
			 
			int arr[]= {1,1,1,0,0,1,1,1,1};
			
			System.out.println(uniqueNo(arr));
		}
}
